{
  //MAC
  "terminal.integrated.defaultProfile.osx": "zsh",

  // Formateador predeterminado
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Formatear autom√°ticamente al guardar
  "editor.formatOnSave": true,

  // Habilitar formateo en JavaScript y TypeScript
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Excluir archivos innecesarios del buscador
  "files.exclude": {
    "node_modules": true,
    "dist": true
  },

  // Ignorar archivos grandes para mejorar el rendimiento
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true
  },

  "material-icon-theme.folders.associations": {
    "aditional": "client",
    "supervisor": "client",
    "deviceController": "lib",
    "soap": "mock",
    "simulator": "controller"
  },
